@page "/api-resources"
@inject ConfigurationDbContext DbContext;

<QuickGrid Items="@DbContext.ApiResources" Class="table table-hover table-striped">
    <PropertyColumn Property="@(a => a.Name)" Title="Name" />
    <PropertyColumn Property="@(a => a.DisplayName)" Title="Display Name" />
    <TemplateColumn Title="Enabled">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" checked="@context.Enabled" disabled>
        </div>
    </TemplateColumn>
    <TemplateColumn Title="">
        <a href="api-resources/@context.Id" class="btn btn-link btn-sm" role="button">Details</a>
    </TemplateColumn>
</QuickGrid>

