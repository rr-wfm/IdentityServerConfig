@page "/clients"
@inject ConfigurationDbContext DbContext;

<QuickGrid Items="@DbContext.Clients" Class="table table-hover table-striped">
    <PropertyColumn Property="@(c => c.ClientName)" Title="Client Name" />
    <PropertyColumn Property="@(c => c.ClientId)" Title="Client Id" />
    <TemplateColumn Title="Protocol Type">
        <span class="badge bg-primary">@context.ProtocolType</span>
    </TemplateColumn>
    <TemplateColumn Title="Enabled">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" checked="@context.Enabled" disabled>
        </div>
    </TemplateColumn>
    <TemplateColumn Title="">
        <a href="clients/@context.Id" class="btn btn-link btn-sm" role="button">Details</a>
    </TemplateColumn>
</QuickGrid>
